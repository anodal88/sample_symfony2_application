<!DOCTYPE html>
<html class="{% block html '' %}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        {% block stylesheets %}
            <link href="{{ asset('bundles/base/css/bootstrap.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/font-awesome.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/ionicons.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/css-iconos-metros-ui/iconFont.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/morris/morris.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/jvectormap/jquery-jvectormap-1.2.2.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/datepicker/datepicker3.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('bundles/base/css/AdminLTE.css') }}" rel="stylesheet" type="text/css" />
           
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="skin-blue"  >
        
        {% block body %}
            <header class="header">
                {% block header %}
                    
                {% endblock %}
                
            </header> 
      
      
            <!-- Left side column. contains the logo and sidebar -->
            <aside class="left-side sidebar-offcanvas">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar ">
                    <!-- Sidebar user panel -->
                    {%if app.user%}
                        <div class="user-panel">
                           
                        {%if 'ROLE_SUPERVISOR' in app.user.roles or 'ROLE_COUNTER' in app.user.roles or 'ROLE_USUARIO_INTERNO' in app.user.roles%}    
                        <div class="text-center image">
                           {%if app.user.empresa.logo %}
                                <img style="width: 140px;height: 61px;border: 0px;" class="img-thumbnail " src="{{asset('uploads/empresas/')~app.user.empresa.logo}}" alt="Logo Empresa"/>
                                {%else%}
                                <img style="width: 100px;height: 70px;border: 0px;" class="img-thumbnail " src="{{asset('uploads/empresas/No-Logo.gif')}}" alt="Logo Empresa"/>
                           {%endif%}   
                               
                        </div>
                       <div class="pull-left info">
                            <p class="text-info text-center">{{app.user.empresa.razonsocial}}</p>

                        </div>
                        {%endif%}
                        
                       {%if 'ROLE_AGENTE_EXTERNO' in app.user.roles %}    
                        <div class="text-center image">
                           {%if app.user.agencia.logo %}
                                <img style="width: 140px;height: 61px;border: 0px;" class="img-thumbnail " src="{{asset('uploads/agencias/')~app.user.agencia.logo}}" alt="Logo Agencia"/>
                                {%else%}
                                <img style="width: 100px;height: 70px;border: 0px;" class="img-thumbnail " src="{{asset('uploads/agencias/No-Logo.gif')}}" alt="Logo Agencia"/>
                           {%endif%}   
                               
                        </div>
                       <div class="pull-left info">
                            <p class="text-info">{{app.user.agencia.nombre}}</p>

                        </div>
                        {%endif%}
                        
                       </div>
                    {%endif%}
                    <!-- search form -->
                   {# <form action="#" method="get" class="sidebar-form">
                        <div class="input-group">
                            <input type="text" name="q" class="form-control" placeholder="Search..."/>
                            <span class="input-group-btn">
                                <button type='submit' name='seach' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                            </span>
                        </div>
                    </form>#}
                    <!-- /.search form -->
                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                    
                        {% block sidebar %}
                            
                        {% endblock %}
                        
                    </ul>
                </section>
            </aside>
         
            <aside class="right-side">
                    
                 <section class="content-header">
                     {% block titlepage %}
                         
                     {% endblock %}
                    
                     
                    <ol class="breadcrumb">
                        {% block breadcrumb %}
                         
                        {% endblock %}   
                    </ol>
                </section>
                    
                 <section class="content">

                    <!-- Small boxes (Stat box) -->
                    <div class="row">
                       {# Notificaciones de Success#}  
                        {% for flashMessage in app.session.flashbag.get('success') %}
                            <div class="alert alert-success alert-dismissable" style="width: 95%; margin-left: 2%;">
                                        <i class="fa fa-check"></i>
                                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                        <b>Informaci&oacute;n!</b> {{ flashMessage }}
                         </div>
                        {% endfor %}
                      {# Notificaciones de Error#}      
                        {% for flashMessage in app.session.flashbag.get('error') %}
                            <div class="alert alert-danger alert-dismissable" style="width: 95%; margin-left: 2%;">
                                        <i class="fa fa-ban"></i>
                                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                        <b>Error!</b> {{ flashMessage }}
                                    </div>
                        {% endfor %} 
                       {# Notificaciones de informacion#}      
                        {% for flashMessage in app.session.flashbag.get('info') %}
                            <div class="alert alert-info alert-dismissable" style="width: 95%; margin-left: 2%;">
                                        <i class="fa fa-info-circle"></i>
                                        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                                        <b>Informaci&oacute;n!</b> {{ flashMessage }}
                                    </div>
                        {% endfor %}
                      {# Notificaciones de Error#}  
                            
                        {% trans_default_domain 'FOSUserBundle' %}
                              
                   
                             
                        {% block area %}
                            
                        {% endblock %}
                      
                    </div>
                 </section>
            </aside>
        
        {% endblock %}
            
        {% include 'EmisionesBundle:Snippets:acercade.html.twig' %}
    
        {% block javascripts %}
            <script src="{{ asset('bundles/base/js/jquery-2.1.1.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/jquery-ui-1.10.3.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/bootstrap.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/sparkline/jquery.sparkline.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/jvectormap/jquery-jvectormap-world-mill-en.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/jqueryKnob/jquery.knob.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/daterangepicker/daterangepicker.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/datepicker/bootstrap-datepicker.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/datepicker/locales/bootstrap-datepicker.es.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/plugins/iCheck/icheck.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/base/js/AdminLTE/app.js') }}" type="text/javascript"></script>
            {#<script src="{{ asset('bundles/base/js/AdminLTE/dashboard.js') }}" type="text/javascript"></script>#}
            {#<script src="{{ asset('bundles/base/js/AdminLTE/demo.js') }}" type="text/javascript"></script>#}
          
        {% endblock %}
    </body>
</html>
