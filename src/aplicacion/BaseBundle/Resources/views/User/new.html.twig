{% extends 'baselogin.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}



<div class="form-box " id="login-box">
            <div class="header bg-blue-gradient">{{ 'layout.register'|trans }}</div>
            <form action="{{ path("user_create") }}" method="post">
                
                <div class="body bg-gray">
                    <div class="form-group">
                        {{ form_widget(form.email) }}
                        
                    </div>
                   <div class="form-group">
                        {{ form_widget(form.username) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.nombre) }}
                        
                    </div>
                     <div class="form-group">
                        {{ form_widget(form.apellidos) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.ci) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.sexo) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.telefono) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.ext) }}
                        
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.jefe) }}
                        
                    </div>
                    
                </div>
                <div class="footer">                                                               
                    <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn bg-blue-gradient btn-block">{{ 'security.login.submit'|trans }}</button>  
                   
                    
                </div>
            </form>

            
        </div>
{% endblock fos_user_content %}

