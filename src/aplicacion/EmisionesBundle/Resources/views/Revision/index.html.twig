{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Revision list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numeroorden</th>
                <th>Reservapnr</th>
                <th>Tarifareserva</th>
                <th>Datosboleto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('revision_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numeroOrden }}</td>
                <td>{{ entity.reservaPnr }}</td>
                <td>{{ entity.tarifaReserva }}</td>
                <td>{{ entity.datosBoleto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('revision_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('revision_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('revision_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
